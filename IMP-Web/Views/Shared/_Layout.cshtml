<html lang="en">
<head>
    <title>IMP - Control panel</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Chrome, Firefox OS and Opera -->
    <meta name="theme-color" content="#1a2326">
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="#1a2326">


    <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,100,700' rel='stylesheet' type='text/css'>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/css/tether.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/IMP.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/navigation.js"></script>
</head>
<body>

    <div id="wrapper">
        <div class="nav-side-menu dropshadow">
            <div class="brand">IMP</div>
            <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#menu-content"></i>

            <div class="menu-list">

                <ul id="menu-content" class="menu-content collapse out">

                    <li id="dashboard-menu-item" onclick='location.href="@Url.Action("Dashboard", "Control")"'>
                        <i class="fa fa-desktop"></i> <span>Dashboard</span>
                    </li>
                    <li id="clients-menu-item" onclick='location.href="@Url.Action("Clients", "Control")"'>
                        <i class="fa fa-users"></i> <span>Clients</span>
                    </li>
                    <li id="dashboard-menu-item">
                        <i class="fa fa-globe"></i> <span>Global data</span>
                    </li>
                    <li id="dashboard-menu-item">
                        <i class="fa fa-user"></i> <span>Profile</span>
                    </li>
                </ul>

            </div>
        </div>
        <div id="page-content-wrapper">
            <div id="title-bar" class="dropshadow"><h2>@ViewBag.Title</h2></div>
            @RenderBody()
        </div>        
    </div>
</body>
</html>